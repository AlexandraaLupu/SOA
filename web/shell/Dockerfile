FROM node:20-alpine AS build
WORKDIR /app
COPY package.json ./
RUN npm install
ARG VITE_REMOTE_ORDERS
ARG VITE_REMOTE_USERS
ARG VITE_REMOTE_NOTIFICATIONS
ENV VITE_REMOTE_ORDERS=$VITE_REMOTE_ORDERS
ENV VITE_REMOTE_USERS=$VITE_REMOTE_USERS
ENV VITE_REMOTE_NOTIFICATIONS=$VITE_REMOTE_NOTIFICATIONS
COPY . .
RUN npm run build

FROM nginx:1.27-alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist /usr/share/nginx/html
